<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

xmlns:app="http://schemas.android.com/apk/res-auto"

xmlns:tools="http://schemas.android.com/tools"

android:id="@+id/main"

android:layout_width="match_parent"

android:layout_height="match_parent"

tools:context=".MainActivity"

>

<TextView

android:id="@+id/solution_tv"

android:layout_width="match_parent"

android:layout_height="60sp"

android:layout_above="@+id/result_tv"

android:layout_margin="16dp"

android:layout_marginTop="16dp"

android:layout_marginBottom="1dp"

android:textAlignment="textEnd"

android:paddingBottom="20dp"

android:textColor="@color/white"

android:textSize="32dp" />

<TextView

android:id="@+id/result_tv"

android:layout_width="match_parent"

android:layout_height="60dp"

android:layout_above="@+id/buttons_layout"

android:layout_margin="16dp"

android:layout_marginTop="16dp"

android:layout_marginBottom="1dp"

android:text="0"

android:backgroundTint="#171E86A0"

android:textAlignment="textEnd"

android:textColor="#65AAFB"

android:textSize="54dp"

android:fontFamily="monospace"

android:textCursorDrawable="@null" />

<LinearLayout

android:layout_width="match_parent"

android:layout_height="wrap_content"

android:orientation="vertical"

android:layout_alignParentBottom="true"

android:paddingVertical="5dp"

android:id="@+id/buttons_layout">

<LinearLayout

android:layout_width="match_parent"

android:layout_height="wrap_content"

android:gravity="center"

android:orientation="horizontal">

<com.google.android.material.button.MaterialButton

android:id="@+id/button_c"

style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"

android:layout_width="72dp"

android:layout_height="72dp"

android:layout_margin="12dp"

android:drawableRight="@drawable/outline_backspace_24"

app:backgroundTint="@color/design_default_color_background"

app:cornerRadius="36dp"

android:text="C"

/>

<com.google.android.material.button.MaterialButton

android:layout_width="72dp"

android:layout_height="72dp"

app:cornerRadius="36dp"

style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"

android:textSize="32dp"

android:textColor="#6AB0F4"

android:layout_margin="12dp"

android:id="@+id/button_openbracket"

app:backgroundTint="@color/white"

android:text="("

android:textStyle="bold"

/>

<com.google.android.material.button.MaterialButton

android:layout_width="72dp"

android:layout_height="72dp"

app:cornerRadius="36dp"

style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"

android:textSize="32dp"

android:textColor="#FF6AB0F4"

android:layout_margin="12dp"

android:id="@+id/button_closebracket"

app:backgroundTint="@color/white"

android:text=")"

android:textStyle="bold"

/>

<com.google.android.material.button.MaterialButton

android:id="@+id/button_divide"

android:layout_width="72dp"

android:layout_height="72dp"

android:layout_margin="12dp"

android:gravity="center"

android:textColor="#FF6AB0F4"

android:textSize="32sp"

app:cornerRadius="36dp"

app:backgroundTint="@color/white"

style="@style/Widget.MaterialComponents.Button.Icon"

android:text="/"

android:drawablePadding="8dp"

/>

</LinearLayout>

<LinearLayout

android:layout_width="match_parent"

android:layout_height="wrap_content"

